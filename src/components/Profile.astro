---
// プロフィール情報をここに記述
const name = "U";
const bio = "ここに自己紹介文が入ります。Astroを使ったサイト制作を楽しんでいます。";
const imageUrl = "./avatar.jpg"; // publicフォルダに画像を配置
---
<style>
  .profile {
    padding: 1.5rem;
    border: 1px solid #ddd;
    border-radius: 8px;
    text-align: center;
  }
  .profile-img {
    width: 100px;
    height: 100px;
    border-radius: 50%;
    object-fit: cover;
    margin-bottom: 1rem;
  }
  h3 {
    margin: 0.5rem 0;
  }
</style>

<div class="profile">
  <img src={imageUrl} alt={name} class="profile-img" />
  <h3>{name}</h3>
  <p>{bio}</p>
  </div>