						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									<div class="string">
										<h4 class="title">{post.data.title}</h4>
										<p class="date">
											<FormattedDate date={post.data.pubDate} />
										</p>
									</div>
									<div class="image">
									{post.data.heroImage && (
